<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_app_splash"
        android:layout_width="124dp"
        android:layout_height="124dp"
        android:src="@drawable/baseline_laundry_24"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_app_name_splash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_app_name_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_motto_splash"
        app:layout_constraintEnd_toEndOf="@+id/img_app_splash"
        app:layout_constraintStart_toStartOf="@+id/img_app_splash"
        app:layout_constraintTop_toBottomOf="@+id/img_app_splash" />

    <TextView
        android:id="@+id/tv_motto_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motto"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_app_name_splash"
        app:layout_constraintStart_toStartOf="@+id/tv_app_name_splash"
        app:layout_constraintTop_toBottomOf="@+id/tv_app_name_splash" />

</androidx.constraintlayout.widget.ConstraintLayout>